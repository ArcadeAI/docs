{
  "name": "arcade-docs",
  "version": "0.0.1",
  "description": "Arcade Documentation",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "pnpm dlx ultracite check",
    "format": "pnpm dlx ultracite fix",
    "prepare": "husky install",
    "postbuild": "pagefind --site .next/server/app --output-path public/_pagefind && next-sitemap",
    "translate": "pnpm dlx tsx scripts/i18n-sync/index.ts && pnpm format",
    "sync:metas": "pnpm dlx tsx scripts/sync-metas.ts app/en",
    "llmstxt": "./scripts/generate-llmstxt.sh",
    "test": "vitest --run",
    "test:watch": "vitest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArcadeAI/arcade-ai.git"
  },
  "authors": [
    "Sam Partee <sam@arcade.dev>",
    "Nate Barbettini <nate@arcade.dev>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArcadeAI/arcade-ai/issues"
  },
  "homepage": "https://arcade.dev/",
  "dependencies": {
    "@arcadeai/design-system": "^3.5.4",
    "@next/third-parties": "15.5.4",
    "@ory/client": "1.22.5",
    "@theguild/remark-mermaid": "0.3.0",
    "@uidotdev/usehooks": "2.4.1",
    "lucide-react": "0.545.0",
    "mdast-util-to-string": "4.0.0",
    "motion": "12.23.22",
    "next": "15.5.4",
    "next-sitemap": "4.2.3",
    "nextra": "4.6.0",
    "nextra-theme-docs": "4.6.0",
    "posthog-js": "1.273.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "7.64.0",
    "react-syntax-highlighter": "15.6.6",
    "tailwindcss-animate": "1.0.7",
    "unist-util-visit": "5.0.0",
    "unist-util-visit-parents": "6.0.1",
    "zustand": "5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@tailwindcss/postcss": "4.1.14",
    "@types/mdast": "4.0.4",
    "@types/mdx": "2.0.13",
    "@types/node": "24.7.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.1",
    "@types/react-syntax-highlighter": "15.5.13",
    "@types/unist": "3.0.3",
    "commander": "14.0.1",
    "fast-glob": "3.3.3",
    "husky": "9.1.7",
    "lint-staged": "16.2.3",
    "next-validate-link": "1.6.3",
    "openai": "6.2.0",
    "ora": "9.0.0",
    "pagefind": "1.4.0",
    "picocolors": "1.1.1",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.14",
    "typescript": "5.9.3",
    "ultracite": "5.6.1",
    "vitest": "3.2.4",
    "zod": "4.1.12"
  },
  "engines": {
    "node": "22.x",
    "pnpm": ">=9.15.4"
  },
  "lint-staged": {
    "!(examples)/**/*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix "
    ]
