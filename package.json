{
  "name": "arcade-docs",
  "version": "0.0.1",
  "description": "Arcade Documentation",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "pnpm dlx ultracite check",
    "format": "pnpm dlx ultracite fix",
    "prepare": "husky install",
    "postbuild": "pagefind --site .next/server/app --output-path public/_pagefind",
    "translate": "pnpm dlx tsx scripts/i18n-sync.ts && pnpm format",
    "sync:metas": "pnpm dlx tsx scripts/sync-metas.ts app/en",
    "llmstxt": "./scripts/generate-llmstxt.sh",
    "test": "vitest --run",
    "test:watch": "vitest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArcadeAI/arcade-ai.git"
  },
  "authors": [
    "Sam Partee <sam@arcade.dev>",
    "Nate Barbettini <nate@arcade.dev>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArcadeAI/arcade-ai/issues"
  },
  "homepage": "https://arcade.dev/",
  "dependencies": {
    "@arcadeai/design-system": "^2.3.0",
    "@next/third-parties": "^15.5.4",
    "@ory/client": "^1.22.2",
    "@theguild/remark-mermaid": "^0.3.0",
    "@uidotdev/usehooks": "^2.4.1",
    "lucide-react": "^0.544.0",
    "motion": "^12.23.21",
    "next": "^15.5.4",
    "next-sitemap": "^4.2.3",
    "nextra": "^4.5.0",
    "nextra-theme-docs": "^4.5.0",
    "posthog-js": "^1.268.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "7.63.0",
    "react-syntax-highlighter": "^15.6.6",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/mdx": "^2.0.13",
    "@types/node": "24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/react-syntax-highlighter": "^15.5.13",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "next-validate-link": "^1.6.3",
    "openai": "^5.23.0",
    "pagefind": "^1.4.0",
    "picocolors": "^1.1.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "typescript": "5.9.2",
    "ultracite": "5.4.5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "22.x",
    "pnpm": ">=9.15.4"
  },
  "lint-staged": {
    "!(examples)/**/*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix "
    ]
  }
}
