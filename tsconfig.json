{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "lib/**/*.ts",
    "_dictionaries/**/*.ts",
    ".next/types/**/*.ts",
    "app/[lang]/page.mdx",
    "mdx-components.ts",
    "app/en/home/page.mdx",
    ".next/dev/types/**/*.ts",
    "app/en/references/page.mdx",
    "config.ts"
  ],
  "exclude": [
    "node_modules",
    "agents",
    "extract-custom-sections",
    "toolkit-docs-generator",
    "toolkit-docs-generator-verification"
  ]
}
