{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "extends": ["ultracite"],
  "linter": {
    "rules": {
      "performance": {
        "noImgElement": "off"
      }
    }
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!dist",
      "!build",
      "!node_modules",
      "!public/**",
      "!agents/**",
      "!.vscode/**",
      "!.vscode/launch.json",
      "!.next",
      "!examples"
    ]
  }
}
